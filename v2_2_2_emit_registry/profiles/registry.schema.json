{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://codeindex.dev/schemas/profile_registry.schema.json",
  "title": "CodeIndex Profile Registry",
  "type": "object",
  "required": ["version", "profiles", "rules"],
  "additionalProperties": false,
  "properties": {
    "version": {"type": "string", "const": "2.2"},
    "profiles": {
      "type": "object",
      "description": "Map of profile aliases to profile JSON paths.",
      "additionalProperties": {"type": "string", "minLength": 1}
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["match", "profile"],
        "additionalProperties": false,
        "properties": {
          "match": {
            "type": "object",
            "required": ["glob"],
            "additionalProperties": false,
            "properties": {
              "glob": {"type": "string", "minLength": 1}
            }
          },
          "profile": {"type": "string", "minLength": 1}
        }
      }
    }
  }
}
