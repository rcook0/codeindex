{
  "profile_id": "codeindex.cpp@2.1",
  "name": "C++",
  "version": "2.1",
  "case_sensitivity": "sensitive",
  "normalization": { "mode": "none", "preserve_original_spelling": true },
  "identifier_rule": { "mode": "regex", "pattern": "[A-Za-z_][A-Za-z0-9_]*" },
  "stop_words": {
    "mode": "inline",
    "words": [
      "class","struct","public","private","protected","static","void","int","return",
      "const","if","else","for","while","true","false","nullptr",
      "include","namespace","using"
    ]
  },
  "comment_syntax": {
    "line_comment_starts": ["//"],
    "block_comment_starts": ["/*"],
    "block_comment_ends": ["*/"]
  },
  "literal_syntax": {
    "exclude_literals": true,
    "string_delims": ["\""],
    "char_delims": ["'"],
    "escape_char": "\\",
    "allow_multiline_strings": false
  },

  "symbol_policy": {
    "mode": "declared",
    "exclude_single_letter_identifiers": false,
    "include_qualified_identifiers": "scope",
    "include_include_headers": true
  }
}
